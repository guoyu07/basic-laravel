// for visual studio code
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "localSourceRoot": "${workspaceRoot}",
            "serverSourceRoot": "/home/vagrant/Code/basic-laravel",
            "log": false,
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "log": false,
            "port": 9001
        }
    ]
}